{
    "rootDir": "../",
    "globals": {
        "__TS_CONFIG__": "<rootDir>/__tests__/tsconfig.json"
    },
    "transform": {
        "\\.(ts)$": "<rootDir>/__tests__/preprocessor.js"
    },
    "moduleDirectories": [
        "node_modules",
        "node_modules/@types"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
        "ts",
        "js"
    ]
}
