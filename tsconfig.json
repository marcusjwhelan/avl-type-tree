{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "compileOnSave": true,
        "declaration": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "outDir": "lib/",
        "typeRoots": [
            "node_modules/@types",
            "node_modules"
        ],
        "types": [
            "node", "jest"
        ],
        "lib": [
            "es6"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "lib",
        "node_modules"
    ]
}
