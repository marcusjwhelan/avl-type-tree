{
    "compilerOptions": {
        "module": "system",
        "target": "es6",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "outFile": "built/index.js",
        "typeRoots": [
            "node_modules/@types",
            "node_modules"
        ],
        "types": [
            "node", "jest"
        ],
        "lib": ["es6"]
    },
    "exclude": [
        "built",
        "node_modules"
    ]
}
